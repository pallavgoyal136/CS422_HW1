#include "decode.h"

Decode::Decode (Mipc *mc)
{
   _mc = mc;
}

Decode::~Decode (void) {}

void
Decode::MainLoop (void)
{
   unsigned int ins;
   unsigned int pc;
   while (1) {
      AWAIT_P_PHI0;	// @posedge
      if (_mc->_insValid) {
         ins = _mc->_ins[IF_ID];
	 pc = _mc->_pc[IF_ID];
	 _mc->_pc_if_id = pc;
         AWAIT_P_PHI1;	// @negedge
         _mc->Dec(ins);
#ifdef MIPC_DEBUG
         fprintf(_mc->_debugLog, "<%llu> Decoded ins %#x\n", SIM_TIME, ins);
#endif
         //_mc->_insValid = FALSE;
         _mc->_decodeValid = TRUE;
	 _mc->_ins[ID_EX] = ins;
	 _mc->_pc[ID_EX] = pc;
	 if(_mc->_stall[ID_EX]) _mc->_ins[ID_EX] = 0;
      }
      else {
         PAUSE(1);
      }
   }
}
